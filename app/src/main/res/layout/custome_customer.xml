<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="150dp"
android:layout_margin="10dp"
android:contentDescription="@string/content_description_default_account"
app:cardCornerRadius="2dp"
app:cardUseCompatPadding="true">

<RelativeLayout
    android:id="@+id/default_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_account_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/user_copy" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/main_account_avatar"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cust_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="0dp"
            android:text="Name"
            android:textIsSelectable="true"
            android:lineSpacingExtra="5dp"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cust_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="0dp"
            android:text="Email"
            android:textIsSelectable="true"
            android:lineSpacingExtra="5dp"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/cust_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="0dp"
            android:text="Number"
            android:textIsSelectable="true"
            android:lineSpacingExtra="5dp"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/cust_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="0dp"
            android:textIsSelectable="true"
            android:text="Address"
            android:lineSpacingExtra="5dp"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/main_account_status"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:src="@drawable/status_available" />
    <Button
        android:id="@+id/btnBuy"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/buy_now"
        android:layout_marginBottom="20dp"
        android:text="VIEW LOGS"
        android:textColor="#fff"
        android:textSize="10sp"
        android:textStyle="bold" />
</RelativeLayout>

</androidx.cardview.widget.CardView>
