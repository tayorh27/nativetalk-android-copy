<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.linphone.accounts.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorA"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="55dp"
            android:paddingLeft="15dp"
            android:text="Cancel"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="55dp"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="55dp"
            android:paddingRight="15dp"
            android:text="Save"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user_avatar_ui" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Username (phone number)"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/assistant_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:background="@drawable/text_field"
            android:contentDescription="@string/content_description_username_field"
            android:hint="e.g 2348100112233"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:paddingTop="20dp"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/assistant_first_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_field"
            android:hint=""
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:paddingTop="20dp"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/assistant_last_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_field"
            android:hint=""
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:paddingTop="20dp"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/assistant_email_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_field"
            android:hint=""
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Address"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/assistant_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_field"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Country"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/assistant_country"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_field"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="State"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/assistant_state"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_field"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="City"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/assistant_city"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_field"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Postal Code"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/assistant_postal_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/text_field"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

    </LinearLayout>
    </LinearLayout>
</ScrollView>