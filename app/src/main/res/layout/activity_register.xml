<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/create_account_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:padding="0dp"
            android:src="@drawable/backold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="30dp"
            android:text="Personal\nInformation"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Enter your details below"
            android:textColor="@color/colorL" />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:gravity="center"-->
<!--            android:paddingTop="10dp"-->
<!--            android:text="@string/assistant_login_desc"-->
<!--            android:textColor="#222" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Username (phone number)"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/assistant_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_field"
                android:contentDescription="@string/content_description_username_field"
                android:hint="e.g 2348100112233"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:paddingTop="20dp"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/assistant_full_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_field"
                android:hint=""
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:paddingTop="20dp"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/assistant_email_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_field"
                android:hint=""
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="@string/password"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/assistant_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_field"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/assistant_reg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/green_button_full"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Create account"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Already have an account? "
                    android:textColor="#222" />

                <TextView
                    android:id="@+id/sign_in_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textAllCaps="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorJ" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>